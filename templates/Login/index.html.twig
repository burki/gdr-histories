{% extends '@TeiEdition/Default/base.html.twig' %}

{% block title %}{{ 'Login'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Login'|trans }}</h1>
    {% if error %}
        <div class="alert alert-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="row">
            <label for="username" class="col-sm-2 col-form-label">{{ 'E-Mail'|trans }}</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div class="row">
            <label for="password" class="col-sm-2 col-form-label">{{ 'Password'|trans }}</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="_password"/>
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
        </div>
        <div class="offset-sm-2">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
{% endblock %}
