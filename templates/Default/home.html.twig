{% extends '@TeiEdition/Default/base.html.twig' %}

{% import '@TeiEdition/Shared/map-leaflet.html.twig' as map %}

{% block head %}
    {{ map.head() }}
    {{ map.head_markercluster() }}

    <script src="{{ app.request.basepath }}/js/blazy.min.js"></script>
{% endblock %}

{% block contenttop %}
{% embed '@TeiEdition/Default/contenttop_skeleton.html.twig' %}
{% endembed %}
{% endblock %}

{% block body %}
    <div class="row">
        <div id="col-main" class="col-sm-8">
            <div class="container-fluid">
                <h4>{{ 'Welcome'|trans }}</h4>
                <div class="two-columns-disabled justify-hyphens">
                    {% if 'en' == app.request.locale %}
                        <p class="dta-p"><a href="{{ path('about') }}">read on...</a></p>
                    {% else %}
                        <p class="dta-p">
                            Begleitend zur Ausstellung „<a href="https://www.jmberlin.de/ausstellung-ein-anderes-land" target="_blank">Ein anderes Land. Jüdisch in der DDR</a>“ im Jüdischen Museum Berlin präsentiert das Moses Mendelssohn Zentrum für europäisch-jüdische Studien in Potsdam eine erste Auswahl aus seinen umfassenden Interview-Sammlungen mit Jüdinnen und Juden aus der DDR sowie ihren Nachfahren.
                            <a href="{{ path('about') }}">mehr...</a>
                        </p>
                    {% endif %}
                </div>
            </div>

            {#
            <div class="container-fluid box">
                <div class="row box-header map">
                    <div class="col-sm-12">
                        <h4><a href="{{ path('place-map') }}">{{ 'Map'|trans }}</a></h4>
                    </div>
                </div>
                <div class="row box-content">
                    <div class="col-sm-12">
                        <div id="map-container">
                            <div id="map" style="width: 100%; min-height: 320px"></div>
                            <script>
                            $( document).ready(function () {
                                showMap();
                            });

                            {{ map.showMap(bounds, markers) }}
                            </script>
                        </div>
                    </div>
                </div>
            </div>
            #}

            <div class="container-fluid box" style="margin-top: 2em">
                <div class="row box-header chronology">
                    <div class="col-sm-12">
                        <h4><a href="{{ path('date-chronology') }}">{{ 'Chronology'|trans }}</a></h4>
                    </div>
                </div>
                <div class="row box-content">
                    <div id="chronology" data-url="{{ path('date-chronology-partial') }}" style="max-height: 320px; overflow-y: scroll; overflow-x: hidden">
                        {{ 'Loading...' | trans }}
                        <script>
                            var chronologyLoaded = false;

                            $( document).ready(function () {
                                if (!chronologyLoaded) {
                                    var pane = $( '#chronology' );
                                    var url = pane.attr("data-url");

                                    // ajax load from data-url
                                    $( pane ).load(url,function(result){
                                        chronologyLoaded = true;
                                    });
                                }
                            });
                        </script>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-sm-4 sidebar">
            <div class="container-fluid box">
                <div class="row box-color-title">
                    <div class="col-sm-12">
                        <h4>Veranstaltungen</h4>
                    </div>
                </div>
                <div class="row box-color-content">
                    <div class="col-sm-12">
                        jeden Dienstag (12. Sep. 2023 bis 9. Jan. 2024), 17:30
                        <h5>DDR am Dienstag</h5>
                        Begleitprogramm zur Ausstellung im Jüdischen Museum Berlin, Altbau 1. OG, Lindenstr. 9-14, 10969 Berlin. <a href="https://www.jmberlin.de/ddr-am-dienstag" target="_blank">Mehr...</a>
                    </div>
                </div>
                <div class="row box-color-content border-top">
                    <div class="col-sm-12">
                        28. September 2023, 18:00
                        <h5>Ein neues Deutschland? Rückkehrerfahrungen nach 1945</h5>
                        Vortrag und Gespräch im Forum Willy Brandt Berlin, Behrenstraße 15, 10117 Berlin Mitte.
Eintritt frei. Karten unter veranstaltungenberlin@willy-brandt.de oder 030 787 70 70.
                        Eine Veranstaltung im Rahmen der Tages des Exils Berlin. <a href="https://mmz-potsdam.de/aktuelles/veranstaltungen/2023/tages-des-exils-berlin" target="_blank">Mehr...</a>

                    </div>
                </div>
                <div class="row box-color-content border-top">
                    <div class="col-sm-12">
                        18.–20. Oktober 2023
                        <h5>...und der Zukunft zugewandt?</h5>
                        Wissenschaftliche Konferenz des Moses Mendelssohn Zentrums für europäisch-jüdische Studien in Potsdam und am Jüdischen Museum Berlin
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
